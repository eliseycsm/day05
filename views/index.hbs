<h1 class="header">Search for the latest headlines!</h1>


<form action="/search" method="POST">

    <div class="form-group">
        <label for="q" class="form-label">News Search</label>
        <input type="text" name="q" id="q" placeholder="Search Term" class="form-control" width="50%">
    </div>

    <div class="form-group">
        <label for="country" class="form-label">Country</label>

        <div class="form-check d-flex justify-content-center">
            <input type="radio" value="us" name="country" id="country"><img src="/flags/us.png">
            <input type="radio" value="uk" name="country" id="country"><img src="/flags/uk.png">
            <input type="radio" value="fr" name="country" id="country"><img src="/flags/fr.png">
        </div>
        <div class="form-check d-flex justify-content-center">
            <input type="radio" value="sg" name="country" id="country"><img src="/flags/sg.png">
            <input type="radio" value="jp" name="country" id="country"><img src="/flags/jp.png">
            <input type="radio" value="cn" name="country" id="country"><img src="/flags/cn.png">
        </div>
    </div>
    <div class="form-group">
        <label for="category" class="form-label">Category</label>
        <select name="category" id="category" class="form-control">
            <option value="business">Business</option>
            <option value="health">Health</option>
            <option value="general">General</option>
            <option value="science">Science</option>
            <option value="sports">Sports</option>
            <option value="technology">Technology</option>
        </select>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <input type="hidden" name="cacheState" value ={{cacheState}}>
</form>

